@model MyApp.Web.ViewModels.UserLoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<div style="max-width: 400px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; background-color: #f9f9f9;">
    <h2 style="text-align: center; color: #09192F;">Login</h2>
    <form asp-action="Login" method="post">
        <div style="margin-bottom: 15px;">
            <label asp-for="Email" style="display: block; font-weight: bold; color: #09192F;"></label>
            <input asp-for="Email" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" />
            <span asp-validation-for="Email" style="color: red; font-size: 0.875em;"></span>
        </div>
        <div style="margin-bottom: 15px;">
            <label asp-for="Password" style="display: block; font-weight: bold; color: #09192F;"></label>
            <input asp-for="Password" type="password" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" />
            <span asp-validation-for="Password" style="color: red; font-size: 0.875em;"></span>
        </div>
        <button type="submit" style="width: 100%; padding: 10px; background-color: #67FFDF; border: none; border-radius: 4px; font-weight: bold; color: #09192F; cursor: pointer;">
            Login
        </button>
        <div asp-validation-summary="ModelOnly" style="color: red; margin-top: 10px;"></div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}