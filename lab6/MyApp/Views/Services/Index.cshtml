@model IEnumerable<MyApp.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Service Name</th>
            <th>Service Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.ServiceDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Details", "Services", new { id = item.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
