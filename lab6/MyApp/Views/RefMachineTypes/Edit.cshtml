@model MyApp.Models.RefMachineType

@{
    ViewData["Title"] = "Редагування типу машини";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Назва типу машини</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Опис</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a href="@Url.Action("Index", "RefMachineTypes")" class="btn btn-secondary">Назад</a>
</form>
