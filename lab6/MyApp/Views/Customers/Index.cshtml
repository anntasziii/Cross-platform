@model IEnumerable<MyApp.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Details", "Customers", new { id = item.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
