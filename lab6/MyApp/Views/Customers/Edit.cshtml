@model MyApp.Models.Customer

@{
    ViewData["Title"] = "Редагування клієнта";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Ім'я</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label>Тип клієнта</label>
        @foreach (var type in ViewBag.CustomerTypes)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="RefCustomerTypeId" value="@type.Value" id="type_@type.Value" @((type.IsSelected ? "checked" : "")) />
                <label class="form-check-label" for="type_@type.Value">@type.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a href="@Url.Action("Index", "Customers")" class="btn btn-secondary">Назад</a>
</form>
